{
  "name": "vault",
  "version": "1.0.0",
  "description": "Create a similar vault like ansible-vault.",
  "main": "./dist/cli.js",
  "bin": {
    "vault": "./dist/cli.js"
  },
  "scripts": {
    "prepare": "husky",
    "build": "tsc",
    "package": "pkg . --targets node18-linux-x64,node18-win-x64,node18-macos-x64",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix --ignore-pattern 'dist/**'",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.9.3",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "pkg": "^5.8.1",
    "zod": "^4.1.12"
  }
}
